{
    "include": ["src/**/*.ts", "vitest.d.ts"],
    "exclude": ["dist", "out", "node_modules", "webview-ui", "src/mocks/*"],
    "compilerOptions": {
        "module": "ES2022",
        "target": "es6",
        "outDir": "out",
        "rootDir": "src",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "lib": ["es2022"],
        "moduleResolution": "Bundler",
        "esModuleInterop": true
    }
}
